{% extends 'base.html.twig' %}

{% block title %}Liste des factures{% endblock %}

{% block body %}
  <div class="center mt-0 d-flex flex-column justify-content-between">
    <div class="row">
      <h1>Liste des factures</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">
              Id facture</th>
            <th scope="col">Facture n°</th>
            <th scope="col">Client</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for invoice in invoices %}
            <tr class="table-active">
              <th scope="row">{{ invoice.id }}</th>
              <td>{{ invoice.reference }}</td>
              <td>{{ invoice.name }}</td>
              <td>
                <a class="btn btn-light mb-1" href="{{ path('invoice_show', {'id': invoice.id}) }}" role="button">Voir</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5">Aucune facture enregistré</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <a class="my-3" href="{{ path('admin') }}">Retour à la page admin</a>
    </div>
  </div>
{% endblock %}
