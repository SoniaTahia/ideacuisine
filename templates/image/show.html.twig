{% extends 'base.html.twig' %}

{% block title %}{{ image.name }}
{% endblock %}

{% block body %}

  <div class="center mt-0 d-flex flex-column justify-content-between">
    <div class="row">
      <h1>{{ image.name }}</h1>
      <img src="/upload/{{ image.picture }}" class="productPic" alt="image {{ image.name }}">
      <table class="table table-over">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ image.id }}</td>
          </tr>
          <tr>
            <th>Titre</th>
            <td>{{ image.name }}</td>
          </tr>
          <tr>
            <th>Alt</th>
            <td>{{ image.alt }}</td>
          </tr>
        </tbody>
      </table>

      <a class="my-3 btn btn-secondary" href="{{ path('image_edit', {'id': image.id}) }}">Modifier</a>

      {{ include('image/_delete_form.html.twig') }}

      <a href="{{ path('image_index') }}">Retour au menu Image</a>
    </div>
  </div>
{% endblock %}
