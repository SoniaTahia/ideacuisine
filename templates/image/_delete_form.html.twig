<form method="post" action="{{ path('image_delete', {'id': image.id}) }}" class="d-flex justify-content-center w-75" onsubmit="return confirm('Êtes-vous sûre de vouloir supprimer cette image?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
  <button class="btn btn-danger w-50">Supprimer</button>
</form>
