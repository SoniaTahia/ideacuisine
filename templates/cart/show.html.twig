{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}
  <div class="center col-10 mt-0 d-flex flex-column justify-content-between">
    <h1>Mon Panier</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Produit</th>
          <th scope="col">Prix</th>
          <th scope="col">Quantit√©</th>
        </tr>
      </thead>
      <tbody>
        {% for row in cartProducts %}
          <tr class="table-active">
            <td>{{ row.product.name }}</td>
            <td>{{ row.product.price }}</td>
            <td>
              <a href="{{ path('cart_less', {'product' : row.product.id})}}">
                <i class="icons bi bi-dash-circle"></i>
              </a>
              {{ row.qty }}
              <a href="{{ path('cart_add', {'product' : row.product.id})}}">
                <i class="icons bi bi-plus-circle"></i>
              </a>
              <a href="{{ path('cart_remove', {'product' : row.product.id})}}">
                <i class="icons bi bi-trash"></i>
              </a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5">Aucun produit dans votre panier</td>
          </tr>
        {% endfor %}
        <tr>
          <td colspan="2">Total :
          </td>
          <td>{{ total }}
          </td>
        </tr>
      </tbody>
    </table>
    <a class="btn btn-secondary mb-3" href="{{ path('product_index') }}">Continuer mes achats</a>
    {% if cartProducts != [] %}
      <a class="btn btn-secondary mt-3" href="{{ path('invoice_new') }}">Valider mon panier</a>
    {% endif %}
  </div>

{% endblock %}
