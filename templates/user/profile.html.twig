{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
  <div class="center col-10 mt-0 d-flex flex-column justify-content-between">
    <h1>{{ user.name }}
      {{ user.firstname }}</h1>
    <table class="table">
      <tbody>
        <tr>
          <th>Email</th>
          <td>{{ user.email }}</td>
        </tr>
        <tr>
          <th>Nom</th>
          <td>{{ user.name }}</td>
        </tr>
        <tr>
          <th>Prénom</th>
          <td>{{ user.firstname }}</td>
        </tr>
        <tr>
          <th>Téléphone</th>
          <td>{{ user.phone }}</td>
        </tr>
        <tr>
          <th>Adresse</th>
          <td>{{ user.adress }}</td>
        </tr>
        <tr>
          <th>Code postal</th>
          <td>{{ user.postCode }}</td>
        </tr>
        <tr>
          <th>Ville</th>
          <td>{{ user.town }}</td>
        </tr>
      </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('invoice_user_invoice', {'id': user.id}) }}">Mes achats</a>

    <a class="btn btn-secondary" href="{{ path('profile_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
  </div>
{% endblock %}
