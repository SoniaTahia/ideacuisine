{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
  <div class="center mt-0 d-flex flex-column justify-content-between">
    <div class="row">
      <h1>Liste des utilisateurs</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Utilisateur Id</th>
            <th scope="col">Email</th>
            <th scope="col">Roles</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for user in users %}
            <tr>
              <td>{{ user.id }}</td>
              <td>{{ user.email }}</td>
              <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
              <td>{{ user.name }}</td>
              <td>{{ user.firstname }}</td>
              <td>
                <a class="btn btn-light mb-1" href="{{ path('user_show', {'id': user.id}) }}" role="button">Voir</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="12">Aucun utilisateur trouvé</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <a class="btn btn-secondary" href="{{ path('user_new') }}">Ajouter un utilisateur</a>
      <a class="my-3" href="{{ path('admin') }}">Retour à la page admin</a>
    {% endblock %}
