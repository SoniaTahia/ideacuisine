{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
  <div class="center col-10 mt-0 d-flex flex-column align-items-center">
    <h1 class="slogan mt-2 mb-5 mx-0 d-flex justify-content-center fw-lighter fst-italic">Liste des utilisateurs</h1>

    <table class="table table-hover table-light table-bordered border-dark border border-5 w-75">
      <thead scope="col">
        <tr class="text-center">
          <th scope="col" class="text-center">Utilisateur Id</th>
          <th scope="col" class="text-center">Email</th>
          <th scope="col" class="text-center">Roles</th>
          <th scope="col" class="text-center">Nom</th>
          <th scope="col" class="text-center">Prénom</th>
          <th scope="col" class="text-center w-25">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <td class="text-center">{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.firstname }}</td>
            <td class="d-flex justify-content-evenly align-items-center w-100">
              <a class="btn btn-dark me-2 w-50" href="{{ path('user_show', {'id': user.id}) }}" role="button">Voir</a>
              <a class="btn btn-danger me-2 w-50" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="12">Aucun utilisateur trouvé</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {#<a class="btn btn-secondary" href="{{ path('user_new') }}">Ajouter un utilisateur</a>#}
    <a class="my-3 text-dark" href="{{ path('admin') }}">Retour à la page admin</a>
  </div>
{% endblock %}
