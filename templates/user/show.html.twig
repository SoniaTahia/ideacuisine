{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
  <div class="center mt-0 d-flex flex-column justify-content-between">
    <div class="row">
      <h1>{{ user.name }}
        {{ user.firstname }}</h1>
      <table class="table">
        <tbody>
          <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
          </tr>
          <tr>
            <th>Nom</th>
            <td>{{ user.name }}</td>
          </tr>
          <tr>
            <th>Prénom</th>
            <td>{{ user.firstname }}</td>
          </tr>
          <tr>
            <th>Téléphone</th>
            <td>{{ user.phone }}</td>
          </tr>
          <tr>
            <th>Adresse</th>
            <td>{{ user.adress }}</td>
          </tr>
          <tr>
            <th>Code postal</th>
            <td>{{ user.postCode }}</td>
          </tr>
          <tr>
            <th>Ville</th>
            <td>{{ user.town }}</td>
          </tr>
        </tbody>
      </table>

      <a class="my-3 btn btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

      {{ include('user/_delete_form.html.twig') }}

      <a href="{{ path('user_index') }}">Retour au menu Utilisateur</a>

    </div>
  </div>
{% endblock %}
