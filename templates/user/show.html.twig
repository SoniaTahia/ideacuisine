{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
  <div class="center col-10 m-0 d-flex flex-column align-items-center">
    <h1 class="text-light d-flex justify-content-center mt-2 mb-5">{{ user.firstname }}
      {{ user.name }}</h1>
    <table class="table table-hover table-light table-bordered table-light border border-3 w-75 mx-3 mt-3">
      <tbody>
        <tr>
          <th>Email</th>
          <td>{{ user.email }}</td>
        </tr>
        <tr>
          <th>Nom</th>
          <td>{{ user.name }}</td>
        </tr>
        <tr>
          <th>Prénom</th>
          <td>{{ user.firstname }}</td>
        </tr>
        <tr>
          <th>Téléphone</th>
          <td>{{ user.phone }}</td>
        </tr>
        <tr>
          <th>Adresse</th>
          <td>{{ user.adress }}</td>
        </tr>
        <tr>
          <th>Code postal</th>
          <td>{{ user.postCode }}</td>
        </tr>
        <tr>
          <th>Ville</th>
          <td>{{ user.town }}</td>
        </tr>
      </tbody>
    </table>

    <a class="my-3 btn btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}

    <a class="text-dark mt-2" href="{{ path('user_index') }}">Retour au menu Utilisateur</a>
  </div>
{% endblock %}
