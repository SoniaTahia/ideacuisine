{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
  <div class="center col-10 mt-0 d-flex flex-column align-items-center">
    <h1 class="slogan mt-2 mb-5 mx-0 d-flex justify-content-center fw-lighter fst-italic">Liste des categories</h1>
    <table class="table table-hover table-light table-bordered border-dark border border-5 w-75">
      <thead>
        <tr>
          <th scope="col" class="text-center">
            Catégorie n°</th>
          <th scope="col" class="text-center">Nom</th>
          <th scope="col" class="text-center w-50">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for category in categories %}
          <tr class="table-active">
            <th scope="row" class="text-center">{{ category.id }}</th>
            <td >{{ category.name }}</td>
            <td class="d-flex justify-content-evenly align-items-center">
              <a class="btn btn-dark me-2 w-25" href="{{ path('category_edit', {'id': category.id}) }}" role=" button">Modifier</a>
              {{ include('category/_delete_form.html.twig') }}
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5">Aucune categorie enregistré</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a class="btn btn-danger w-25 mt-5" href="{{ path('category_new') }}">Ajouter une categorie</a>
    <a class="my-3 text-dark" href="{{ path('admin') }}">Retour à la page admin</a>
  </div>
</div>

{% endblock %}
