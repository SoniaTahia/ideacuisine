{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}

  <div class="center col-10 mt-0 d-flex flex-column justify-content-between">
    <h1>Catégorie</h1>

    <table class="table">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ category.id }}</td>
        </tr>
        <tr>
          <th>Nom</th>
          <td>{{ category.name }}</td>
        </tr>
      </tbody>
    </table>

    <a class="my-3 btn btn-dark" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

    <a class="my-3" href="{{ path('category_index') }}">Retour au menu Catégorie</a>
  </div>
{% endblock %}
