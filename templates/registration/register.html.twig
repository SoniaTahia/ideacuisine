{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  {% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}

  <div class="center  mt-0 d-flex flex-column justify-content-between">
    <div class="row col-12">
      <h1 class="slogan my-2 mx-0 fw-lighter fst-italic">
        Inscription
      </h1>

      {{ form_start(registrationForm) }}

      {{ form_row(registrationForm.email) }}
      {{ form_row(registrationForm.plainPassword) }}
      {{ form_row(registrationForm.name) }}
      {{ form_row(registrationForm.firstname) }}
      {{ form_row(registrationForm.phone) }}
      {{ form_row(registrationForm.adress) }}
      {{ form_row(registrationForm.postCode) }}
      {{ form_row(registrationForm.town) }}

      <button type="submit" class="btn btn-dark mb-3">S'inscrire</button>

      {{ form_end(registrationForm) }}

    </div>
  </div>

{% endblock %}
