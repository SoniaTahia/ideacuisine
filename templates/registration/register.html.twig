{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  {% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}

  <div class="d-flex flex-column w-100 align-items-center">
    <div class="center col-10 mt-0 d-flex flex-column w-75">
      <h1 class="slogan mt-2 mb-5 fw-lighter fst-italic d-flex justify-content-center ">
        Inscription
      </h1>
      
      {{ form_start(registrationForm) }}

      <div class="d-flex d-none d-md-block w-100">
        <div class="w-50">{{ form_row(registrationForm.name) }}</div>
        <div class="w-50 ms-5">{{ form_row(registrationForm.firstname) }}</div>
      </div>
      <div class="w-100 d-none d-md-block me-3">{{ form_row(registrationForm.adress) }}</div>
      <div class="d-flex d-none d-md-block w-100">
        <div class="w-50">{{ form_row(registrationForm.postCode) }}</div>
        <div class="w-50 ms-5">{{ form_row(registrationForm.town) }}</div>
        <div class="w-50 ms-5">{{ form_row(registrationForm.phone) }}</div>
      </div>
      <div class="d-flex d-none d-md-block w-100">
        <div class="w-50">{{ form_row(registrationForm.email) }}</div>
        <div class="w-50 ms-5">{{ form_row(registrationForm.plainPassword) }}</div>
      </div>

      <div class="d-flex d-none d-md-block justify-content-center ">
        <button type="submit" class="btn btn-danger my-5 w-50">S'inscrire</button>
      </div>
      {{ form_end(registrationForm) }}

    </div>
  </div>

{% endblock %}
