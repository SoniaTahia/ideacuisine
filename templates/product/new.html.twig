{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau produit{% endblock %}

{% block body %}

  <div class="d-flex flex-column w-100 align-items-center">
    <h1 class="slogan mt-2 mb-5 fw-lighter fst-italic d-flex justify-content-center ">Ajouter un nouveau produit</h1>

    {{ form_start(form) }}

    <div class="d-flex w-100">
      <div class="w-50">{{ form_row(form.reference) }}</div>
      <div class="w-50 ms-5">{{ form_row(form.name) }}</div>
      <div class="w-50 ms-5">{{ form_row(form.category) }}</div>
    </div>
    <p class="w-100">{{ form_row(form.description) }}</p>
    <div class="d-flex w-100">
      <div class="w-50">{{ form_row(form.price) }}</div>
      <div class="w-50 ms-5">{{ form_row(form.stock) }}</div>
      <div class="w-50 ms-5">{{ form_row(form.active) }}</div>
    </div>

    <div class="d-flex justify-content-evenly w-100">
      <button class="btn btn-success mt-5 mb-3 w-50">{{ button_label|default('Ajouter') }}</button>
    </div>

    {{ form_end(form) }}

    <a class="text-dark" href="{{ path('product_index') }}">Retour au menu Produit</a>

  </div>

{% endblock %}
