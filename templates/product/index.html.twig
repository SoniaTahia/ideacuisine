{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
  <div class="center col-10 mt-0 d-flex flex-column justify-content-center bg-light">
    <div class="row d-flex justify-content-center">
      <h1 class="text-secondary d-flex justify-content-center my-3">Nos produits
        {% if categoryName != "" %}{{ categoryName }}
        {% endif %}
      </h1>

      {% for product in products %}
        <div class="card text-white mt-2 mb-4 mx-4 " style="max-width: 22rem;">
          <div class="card-header">{{ product.category.name }}</div>
          <div class="card-body d-flex flex-column align-items-center">
            <h4>{{ product.name }}</h4>
            {% if product.price %}
              <h5 class="card-title">Prix :
                {{ product.price }}
                TND</h5>
            {% else %}
              <h4 class="card-title">Prix : Sur Devis</h4>
            {% endif %}
            {#{% if product.images != [] %}#}
            {% if product.images is not empty %}
              <img src="/upload/{{ product.images.0.picture }}" alt="{{ product.images.0.alt }}" class="productPic2">
            {% else %}
              Pas d'image
            {% endif %}
            <div class="d-flex">
              <a class="btn btn-light btn-sm mx-2" style="max-width: 5rem;" href="{{ path('product_show', {'id': product.id}) }}">Voir</a>
              {% if product.stock != 0 %}
                {% if app.user %}
                  <a class="btn btn-danger btn-sm mx-2" style="max-width: 5rem;" href="{{ path('cart_add', {'product': product.id}) }}">Acheter</a>
                {% else %}
                  <a class="btn btn-danger btn-sm mx-2" style="max-width: 5rem;" href="{{ path('home_contact_info')}}">Acheter</a>
                {% endif %}
              {% else %}
                <tr>
                  <td colspan="5">Produit en rupture de stock</td>
                </tr>
              {% endif %}
            </div>
          </div>
        </div>
      {% else %}
        <tr>
          <td colspan="5">Aucun produit enregistré</td>
        </tr>
      {% endfor %}

      <ul class="pagination d-flex justify-content-center">
        <li class="page-product bg-secondary {% if actualPage == 1 %}disabled{% endif %}">
          <a class="page-link text-secondary" href="{{ path('product_index', {'page': actualPage - 1}) }}">&laquo;</a>
        </li>
        {% for page in pages %}
          <li class="page-product {% if actualPage == page %}active{% endif %}">
            <a class="page-link text-secondary" href="{{ path('product_index', {'page': page}) }}">{{ page }}</a>
          </li>
        {% endfor %}
        <li class="page-product {% if actualPage == lastPage %}disabled{% endif %}">
          <a class="page-link text-secondary" href="{{ path('product_index', {'page': actualPage + 1}) }}">&raquo;</a>
        </li>
      </ul>

      {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-secondary" href="{{ path('product_new') }}">Ajouter un produit</a>
        <a class="my-3" href="{{ path('admin') }}">Retour à la page admin</a>
      {% endif %}
    </div>
  </div>
{% endblock %}
