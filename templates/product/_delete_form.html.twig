<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" class="w-100 d-flex justify-content-center" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger my-5 text-center w-100">Supprimer</button>
</form>
